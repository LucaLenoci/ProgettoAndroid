<!-- rounded_button.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="?attr/colorPrimary" /> <!-- Colore del background -->
    <corners android:radius="16dp" /> <!-- Bordi arrotondati -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
    <stroke android:width="2dp" android:color="?attr/colorOnPrimary" /> <!-- Bordo del bottone -->
</shape>
