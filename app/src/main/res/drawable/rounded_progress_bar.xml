<!-- res/drawable/rounded_progress_bar.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background della ProgressBar -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- Arrotondamento degli angoli -->
            <solid android:color="#D3D3D3" /> <!-- Colore di sfondo della ProgressBar -->
        </shape>
    </item>

    <!-- Avanzamento della ProgressBar -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="12dp" /> <!-- Arrotondamento degli angoli -->
                <solid android:color="#FFFFFF" /> <!-- Colore dell'avanzamento -->
            </shape>
        </clip>
    </item>
</layer-list>
